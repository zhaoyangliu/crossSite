{
  "manifest_version": 2,

  "background": {
     "scripts": ["background.js"]
     //"page": "background.html"
  },

  "name": "Tracker",
  "description": ".",
  "version": "1.0",

  "permissions": [
    "<all_urls>","webRequest","webRequestBlocking", "webNavigation",
    "storage","background", "tabs", "activeTab"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' ",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
  
}

 